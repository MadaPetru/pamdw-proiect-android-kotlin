<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEEB">

    <!-- Top Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#66CDAA"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="24dp"
            android:src="@drawable/farmer_icon" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:text="user@example.com"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="☀️"
            android:gravity="center"
            android:textSize="18sp" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="🔓"
            android:gravity="center"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Chart Section 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cost and revenue per all fields"
            android:textStyle="bold"
            android:textColor="#000" />

        <Spinner
            android:id="@+id/currencySpinnerFields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/currency_array"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/fieldsChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp" />

    <!-- Chart Section 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost and revenue per operations"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="#000" />

        <Spinner
            android:id="@+id/currencySpinnerOperations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/currency_array"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/operationsChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66CDAA"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>
